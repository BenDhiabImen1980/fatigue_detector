# ============================================
# STAGE 1 : Builder
# ============================================
FROM python:3.10-slim-bookworm AS builder

WORKDIR /app

# Dépendances système minimales
RUN apt-get update && apt-get install -y --no-install-recommends \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Installation des packages Python
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copier uniquement App/ et Model/
COPY App ./App
COPY Model ./Model

# Vérification que le modèle est présent
RUN echo "=== Vérification du modèle ===" && \
    ls -lh Model/ && \
    python -c "import tensorflow as tf; print(f'TensorFlow {tf.__version__} ✓')" && \
    python -c "from PIL import Image; print('Pillow ✓')" && \
    python -c "import os; assert os.path.exists('Model/Fatig_model.h5'), 'Modèle introuvable !'; print('Modèle trouvé ✓')"

# ============================================
# STAGE 2 : Runtime (image finale)
# ============================================
FROM python:3.10-slim-bookworm

WORKDIR /app

# Dépendances runtime
RUN apt-get update && apt-get install -y --no-install-recommends \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libgomp1 \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Copier depuis builder
COPY --from=builder /usr/local/lib/python3.10/site-packages /usr/local/lib/python3.10/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin
COPY --from=builder /app/App ./App
COPY --from=builder /app/Model ./Model

# Nettoyage pour réduire la taille
RUN find /usr/local/lib/python3.10/site-packages -type d -name "tests" -exec rm -rf {} + 2>/dev/null || true && \
    find /usr/local/lib/python3.10/site-packages -type d -name "test" -exec rm -rf {} + 2>/dev/null || true && \
    find /usr/local/lib/python3.10/site-packages -name "*.pyc" -delete && \
    find /usr/local/lib/python3.10/site-packages -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true

# Variables d'environnement
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    TF_CPP_MIN_LOG_LEVEL=2

EXPOSE 8000

# Healthcheck (utilise curl au lieu de requests car plus léger)
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Démarrage - main.py est dans App/
CMD ["uvicorn", "App.main:app", "--host", "0.0.0.0", "--port", "8000"]